###################
# Custom functions
###################

# Combine mkdir and cd into `mkcd`
mkcd()
{
    mkdir -p -- "$1" &&
      cd -P -- "$1"
}

# Inspect a FITS object quickly using `ifi`
ifi()
{
    ipython -i -c "from astropy.io import fits; print(\"\\nFor your convenience, ipython ran:\\nf = fits.open($1)\"); f = fits.open(\"$1\")"
}
